{
  "private": true,
  "license": "MIT",
  "version": "0.0.1",
  "name": "gatsby-starter-minimal-ts",
  "author": "Jeroen Gerits <jeroen@gerits.email>",
  "description": "A minimal TypeScript starter for Gatsby with Theme UI",
  "keywords": [
    "gatsby",
    "minimal",
    "starter",
    "typescript",
    "theme-ui"
  ],
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "type-check": "tsc"
  },
  "dependencies": {
    "gatsby": "^2.30.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@theme-ui/color": "^0.3.5",
    "@theme-ui/presets": "^0.3.5",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/theme-ui": "^0.3.7",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "gatsby-plugin-theme-ui": "^0.3.5",
    "prettier": "^2.2.1",
    "theme-ui": "^0.3.5",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "2020",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "react/prop-types": "off"
    }
  }
}
